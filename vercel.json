{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install --no-package-lock --legacy-peer-deps --force",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_PUBLIC_SITE_URL": "https://www.voideconomy.com"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "ndp-analysis-site.vercel.app"
        }
      ],
      "destination": "https://www.voideconomy.com/:path*",
      "permanent": true
    }
  ]
} 